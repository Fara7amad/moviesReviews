   <div class="login-wrapper" id="login-content">
      <div class="login-content">
        <a href="#" class="close">x</a>
        <h3>Login</h3>
        <form method="post" action="/login">
          <div class="row">
            <label for="email">
              Email:
              <input
                type="text"
                name="email"
                id="username"
                pattern="^[a-zA-Z0-9._-]+@[a-zA-Z]+\.[a-zA-Z]+$"
                required="required"
              />
            </label>
          </div>

          <div class="row">
            <label for="password">
              Password:
              <input
                type="password"
                name="password"
                id="password"
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$"
                required="required"
              />
            </label>
          </div>
          <div class="row">
            <div class="remember">
              <div>
                <input
                  type="checkbox"
                  name="remember"
                  value="Remember me"
                /><span>Remember me</span>
              </div>
              <a href="#">Forget password ?</a>
            </div>
          </div>
          <div class="row">
            <button type="submit">Login</button>
          </div>
        </form>
        <div class="row">
          <p>Or via social</p>
          <div class="social-btn-2">
            <a class="fb" href="#"
              ><i class="ion-social-facebook"></i>Facebook</a
            >
            <a class="tw" href="#"><i class="ion-social-twitter"></i>twitter</a>
          </div>
        </div>
      </div>
    </div>
